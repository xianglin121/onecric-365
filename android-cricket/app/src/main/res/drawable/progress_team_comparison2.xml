<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="45"
                android:endColor="@color/c_C8C8C8"
                android:startColor="@color/c_C8C8C8" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="45"
                    android:endColor="@color/c_DC3C23"
                    android:startColor="@color/c_DC3C23" />
            </shape>
        </clip>
    </item>
</layer-list>