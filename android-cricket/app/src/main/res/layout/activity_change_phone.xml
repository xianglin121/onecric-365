<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white_6dp_rec">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/phone_number"
                android:textSize="14dp"
                android:textColor="@color/c_333333"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/c_E9E9E9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_phone_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="+65"
                android:textSize="15dp"
                android:textColor="@color/c_333333"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_arrow_down"
                app:tint="@color/c_333333"/>

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:hint="@string/please_input_phone_number"
                android:textColorHint="@color/c_999999"
                android:lines="1"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/c_E9E9E9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:hint="@string/please_input_verify_code"
                android:textColorHint="@color/c_999999"
                android:lines="1"
                android:background="@null"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_get_code"
                android:layout_width="76dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="@string/get_verify_code"
                android:textSize="12dp"
                android:textColor="@color/c_E3AC72"
                app:stv_stroke_width="1dp"
                app:stv_stroke_color="@color/c_E3AC72"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/confirm_change"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_dc3c23_23dp_rec"/>
</LinearLayout>