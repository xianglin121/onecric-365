<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_F3F3F7">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:minHeight="80dp"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:background="@mipmap/bg_football_match_head">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_title_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/iv_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginTop="51dp"
                                android:layout_marginLeft="12dp"
                                android:background="@mipmap/icon_arrow_left"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_match_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:id="@+id/tv_match_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12dp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_report"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back"
                                app:layout_constraintRight_toLeftOf="@id/iv_collect"
                                android:layout_marginRight="8dp"
                                android:background="@mipmap/icon_match_report"/>

                            <ImageView
                                android:id="@+id/iv_collect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/selector_collection"/>

                            <ImageView
                                android:id="@+id/iv_team_logo_one"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:layout_constraintTop_toBottomOf="@id/iv_back"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginTop="19dp"
                                android:layout_marginLeft="50dp"/>

                            <TextView
                                android:id="@+id/tv_team_name_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/iv_team_logo_one"
                                app:layout_constraintLeft_toLeftOf="@id/iv_team_logo_one"
                                app:layout_constraintRight_toRightOf="@id/iv_team_logo_one"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/iv_back"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginTop="31dp"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                            <LinearLayout
                                android:id="@+id/ll_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                app:layout_constraintTop_toBottomOf="@id/tv_state"
                                app:layout_constraintLeft_toLeftOf="@id/tv_state"
                                app:layout_constraintRight_toRightOf="@id/tv_state"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_team_one_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32dp"
                                    android:textColor="@color/white"/>

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:background="@color/white"/>

                                <TextView
                                    android:id="@+id/tv_team_two_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32dp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                            <com.coorchice.library.SuperTextView
                                android:id="@+id/tv_half_score"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                app:layout_constraintTop_toBottomOf="@id/ll_score"
                                app:layout_constraintLeft_toLeftOf="@id/tv_state"
                                app:layout_constraintRight_toRightOf="@id/tv_state"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="half-court 0-0"
                                android:textSize="11dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/white"
                                app:stv_solid="@color/c_b3ffffff"
                                app:stv_corner="40dp"/>

                            <ImageView
                                android:id="@+id/iv_team_logo_two"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:layout_constraintTop_toTopOf="@id/iv_team_logo_one"
                                app:layout_constraintBottom_toBottomOf="@id/iv_team_logo_one"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginRight="50dp"/>

                            <TextView
                                android:id="@+id/tv_team_name_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/iv_team_logo_two"
                                app:layout_constraintLeft_toLeftOf="@id/iv_team_logo_two"
                                app:layout_constraintRight_toRightOf="@id/iv_team_logo_two"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:textColor="@color/white"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginBottom="12dp"
                                android:gravity="center"
                                android:background="@drawable/shape_66000000_40dp_rec"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_animation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/live_animation"
                                    android:textSize="12dp"
                                    android:textColor="@color/c_b3ffffff"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:background="@color/c_b3ffffff"/>

                                <TextView
                                    android:id="@+id/tv_video"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/live_video"
                                    android:textSize="12dp"
                                    android:textColor="@color/c_b3ffffff"/>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="80dp"
                        app:layout_collapseMode="pin">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_title_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/iv_back_two"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginBottom="7dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/icon_arrow_left"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_title_team_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back_two"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back_two"
                                app:layout_constraintLeft_toRightOf="@id/iv_back_two"
                                android:layout_marginLeft="6dp"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_title_score_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back_two"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back_two"
                                app:layout_constraintLeft_toRightOf="@id/tv_title_team_one"
                                android:layout_marginLeft="8dp"
                                android:text="0"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                            <com.coorchice.library.SuperTextView
                                android:id="@+id/tv_title_match_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back_two"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back_two"
                                app:layout_constraintLeft_toRightOf="@id/tv_title_score_one"
                                android:layout_marginLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="9dp"
                                android:paddingRight="9dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="10dp"
                                app:stv_corner="40dp"
                                app:stv_solid="@color/c_80FFFFFF" />

                            <TextView
                                android:id="@+id/tv_title_score_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back_two"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back_two"
                                app:layout_constraintLeft_toRightOf="@id/tv_title_match_state"
                                android:layout_marginLeft="8dp"
                                android:text="0"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_title_team_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/iv_back_two"
                                app:layout_constraintBottom_toBottomOf="@id/iv_back_two"
                                app:layout_constraintLeft_toRightOf="@id/tv_title_score_two"
                                android:layout_marginLeft="6dp"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/magicIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"/>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
            android:id="@+id/fl_webview"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:visibility="gone">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>

            <ImageView
                android:id="@+id/iv_back_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="51dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/icon_arrow_left"/>
        </FrameLayout>

        <com.tencent.liteav.demo.superplayer.MatchPlayerView
            android:id="@+id/matchPlayerView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/black"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_input"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/bg_live_chat_input">
                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:hint="@string/live_talk_some_hint"
                    android:textColorHint="@color/c_999999"
                    android:background="@null"
                    android:lines="1"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/icon_emoji"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:text="@string/send"
                android:textSize="16dp"
                android:textColor="@color/c_999999"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/more_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>