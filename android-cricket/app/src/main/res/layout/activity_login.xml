<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="12dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="24dp"
        android:background="@mipmap/icon_arrow_left"/>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="142dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_login"
            android:textSize="18dp"
            android:textColor="@color/c_DC3C23"/>

        <View
            android:id="@+id/line_one"
            android:layout_width="72dp"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/indicator_login"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ll_phone"
        app:layout_constraintLeft_toRightOf="@id/ll_phone"
        android:layout_marginLeft="28dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_login"
            android:textSize="18dp"
            android:textColor="@color/c_b3ffffff"/>

        <View
            android:id="@+id/line_two"
            android:layout_width="72dp"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/indicator_login"
            android:visibility="invisible"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_pwd"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:id="@+id/ll_phone_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_phone_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65"
                android:textSize="15dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_arrow_down"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            app:layout_constraintTop_toTopOf="@id/ll_phone_prefix"
            app:layout_constraintBottom_toBottomOf="@id/ll_phone_prefix"
            app:layout_constraintLeft_toRightOf="@id/ll_phone_prefix"
            android:layout_marginLeft="13dp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ll_phone_prefix"
            app:layout_constraintBottom_toBottomOf="@id/ll_phone_prefix"
            app:layout_constraintLeft_toRightOf="@id/ll_phone_prefix"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="@string/please_input_phone_number_new"
            android:textSize="15dp"
            android:textColorHint="@color/c_b3ffffff"
            android:textColor="@color/white"
            android:background="@null"
            android:lines="1"
            android:inputType="number"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_phone_prefix"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/c_80FFFFFF"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_one"
        android:layout_marginTop="36dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/icon_verify_code"/>

            <View
                android:layout_width="1dp"
                android:layout_height="13dp"
                app:layout_constraintTop_toTopOf="@id/iv_code"
                app:layout_constraintBottom_toBottomOf="@id/iv_code"
                app:layout_constraintLeft_toRightOf="@id/iv_code"
                android:layout_marginLeft="29dp"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_code"
                app:layout_constraintBottom_toBottomOf="@id/iv_code"
                app:layout_constraintLeft_toRightOf="@id/iv_code"
                app:layout_constraintRight_toLeftOf="@id/tv_get_code"
                android:layout_marginLeft="45dp"
                android:hint="@string/please_input_verify_code_new"
                android:textSize="15dp"
                android:textColorHint="@color/c_b3ffffff"
                android:textColor="@color/white"
                android:background="@null"
                android:lines="1"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_code"
                app:layout_constraintBottom_toBottomOf="@id/iv_code"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="30dp"
                android:text="@string/get_verify_code"
                android:textSize="14dp"
                android:textColor="@color/c_DC3C23"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/iv_code"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/c_80FFFFFF"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="42dp"
                android:src="@mipmap/icon_pwd"/>

            <View
                android:layout_width="1dp"
                android:layout_height="13dp"
                app:layout_constraintTop_toTopOf="@id/iv_pwd"
                app:layout_constraintBottom_toBottomOf="@id/iv_pwd"
                app:layout_constraintLeft_toRightOf="@id/iv_pwd"
                android:layout_marginLeft="29dp"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_pwd"
                app:layout_constraintBottom_toBottomOf="@id/iv_pwd"
                app:layout_constraintLeft_toRightOf="@id/iv_pwd"
                app:layout_constraintRight_toLeftOf="@id/iv_toggle"
                android:layout_marginLeft="45dp"
                android:hint="@string/please_input_pwd_hint"
                android:textSize="15dp"
                android:textColorHint="@color/c_b3ffffff"
                android:textColor="@color/white"
                android:background="@null"
                android:lines="1"
                android:inputType="textPassword"/>

            <ImageView
                android:id="@+id/iv_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_pwd"
                app:layout_constraintBottom_toBottomOf="@id/iv_pwd"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="30dp"
                android:src="@drawable/selector_pwd_toggle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/iv_pwd"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/c_80FFFFFF"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/btn_login"
        android:layout_width="315dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/fl_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/btn_login"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_dc3c23_23dp_rec"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="30dp"
        android:text="@string/register_new_account"
        android:textSize="17dp"
        android:textColor="@color/c_DC3C23"/>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp"
        android:text="@string/forget_password"
        android:textSize="17dp"
        android:textColor="@color/c_b3ffffff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_agree"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/login_protocol_and_privacy_one"
            android:textSize="12dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/login_protocol_and_privacy_two"
            android:textSize="12dp"
            android:textColor="@color/c_DC3C23"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_protocol_and_privacy_three"
            android:textSize="12dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/login_protocol_and_privacy_four"
            android:textSize="12dp"
            android:textColor="@color/c_DC3C23"/>
    </LinearLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>