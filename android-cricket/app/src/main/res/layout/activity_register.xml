<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_login">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="24dp"
                android:background="@mipmap/icon_arrow_left"/>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="142dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_new_account"
                    android:textSize="18dp"
                    android:textColor="@color/c_DC3C23"/>

                <View
                    android:layout_width="90dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/indicator_login"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_account"
                android:layout_marginTop="45dp">
                <LinearLayout
                    android:id="@+id/ll_phone_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_phone_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:textSize="15dp"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/icon_arrow_down"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    app:layout_constraintTop_toTopOf="@id/ll_phone_prefix"
                    app:layout_constraintBottom_toBottomOf="@id/ll_phone_prefix"
                    app:layout_constraintLeft_toRightOf="@id/ll_phone_prefix"
                    android:layout_marginLeft="13dp"
                    android:background="@color/white"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ll_phone_prefix"
                    app:layout_constraintBottom_toBottomOf="@id/ll_phone_prefix"
                    app:layout_constraintLeft_toRightOf="@id/ll_phone_prefix"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/please_input_phone_number"
                    android:textSize="15dp"
                    android:textColorHint="@color/c_b3ffffff"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="number"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_phone_prefix"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/c_80FFFFFF"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_one"
                android:layout_marginTop="36dp">
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_get_code"
                    android:layout_marginLeft="30dp"
                    android:hint="@string/please_input_verify_code"
                    android:textSize="15dp"
                    android:textColorHint="@color/c_b3ffffff"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/et_code"
                    app:layout_constraintBottom_toBottomOf="@id/et_code"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="30dp"
                    android:text="@string/get_verify_code"
                    android:textSize="14dp"
                    android:textColor="@color/c_DC3C23"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/et_code"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/c_80FFFFFF"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_two"
                android:layout_marginTop="36dp">
                <EditText
                    android:id="@+id/et_pwd_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="30dp"
                    android:hint="@string/please_input_login_pwd"
                    android:textSize="15dp"
                    android:textColorHint="@color/c_b3ffffff"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/iv_toggle_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/et_pwd_one"
                    app:layout_constraintBottom_toBottomOf="@id/et_pwd_one"
                    app:layout_constraintRight_toRightOf="@id/et_pwd_one"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/selector_pwd_toggle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/et_pwd_one"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/c_80FFFFFF"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_three"
                android:layout_marginTop="36dp">
                <EditText
                    android:id="@+id/et_pwd_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="30dp"
                    android:hint="@string/please_input_pwd_again"
                    android:textSize="15dp"
                    android:textColorHint="@color/c_b3ffffff"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/iv_toggle_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/et_pwd_two"
                    app:layout_constraintBottom_toBottomOf="@id/et_pwd_two"
                    app:layout_constraintRight_toRightOf="@id/et_pwd_two"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/selector_pwd_toggle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/et_pwd_two"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/c_80FFFFFF"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.coorchice.library.SuperTextView
                android:id="@+id/btn_register"
                android:layout_width="315dp"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/cl_four"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/btn_register"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_dc3c23_23dp_rec"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</FrameLayout>