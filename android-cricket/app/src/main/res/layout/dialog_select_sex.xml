<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/dialog_change_sex"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <View
            style="@style/line"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp">
            <ImageView
                android:id="@+id/iv_male"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="50dp"
                android:background="@drawable/selector_male"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_male"
                app:layout_constraintBottom_toBottomOf="@id/iv_male"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="or"
                android:textSize="18sp"
                android:textColor="@color/c_00abf0"/>

            <ImageView
                android:id="@+id/iv_female"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="50dp"
                android:background="@drawable/selector_female"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_save"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:text="@string/save"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:stv_solid="@color/c_00abf0"
            app:stv_corner="50dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>