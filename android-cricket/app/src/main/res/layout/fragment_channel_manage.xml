<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/btn_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:background="@mipmap/icon_arrow_left_black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_left"
            app:layout_constraintBottom_toBottomOf="@id/btn_left"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_left"
            app:layout_constraintBottom_toBottomOf="@id/btn_left"
            android:layout_marginRight="20dp"
            android:textSize="13dp"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_football"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="48dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/match_football"
                android:textSize="17dp"
                android:textColor="@color/c_E3AC72"/>

            <View
                android:id="@+id/line_football"
                android:layout_width="34dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/c_E3AC72"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_basketball"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ll_football"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="48dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_basketball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/match_basketball"
                android:textSize="17dp"
                android:textColor="@color/c_666666"/>

            <View
                android:id="@+id/line_basketball"
                android:layout_width="34dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/c_E3AC72"
                android:visibility="gone"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_football"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_football"
            android:layout_marginTop="5dp"
            android:padding="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_basketball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_football"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>