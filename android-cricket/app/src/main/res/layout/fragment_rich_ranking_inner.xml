<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar_two"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:src="@mipmap/bg_avatar_default"
                    android:scaleType="centerCrop"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/c_A9E0F7"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/iv_avatar_two"
                    android:layout_marginTop="-20dp"
                    android:background="@mipmap/icon_number_two"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/iv_avatar_two"
                    android:layout_marginBottom="-10dp"
                    android:background="@mipmap/img_number_two"/>


                <TextView
                    android:id="@+id/tv_name_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_avatar_two"
                    android:layout_marginTop="8dp"
                    android:textSize="12dp"
                    android:textColor="@color/c_87390E"/>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_name_two"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_popular_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="壕气"
                        android:textSize="10dp"
                        android:textColor="@color/c_87390E"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_state_two"
                    android:layout_width="61dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ll_two"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/selector_headline_user_follow"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar_one"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:src="@mipmap/bg_avatar_default"
                    android:scaleType="centerCrop"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/c_FEE737"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/iv_avatar_one"
                    android:layout_marginTop="-20dp"
                    android:background="@mipmap/icon_number_one"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/iv_avatar_one"
                    android:layout_marginBottom="-10dp"
                    android:background="@mipmap/img_number_one"/>


                <TextView
                    android:id="@+id/tv_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_avatar_one"
                    android:layout_marginTop="8dp"
                    android:textSize="12dp"
                    android:textColor="@color/c_87390E"/>

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_name_one"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_popular_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="壕气"
                        android:textSize="10dp"
                        android:textColor="@color/c_87390E"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_state_one"
                    android:layout_width="61dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ll_one"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/selector_headline_user_follow"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar_three"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:src="@mipmap/bg_avatar_default"
                    android:scaleType="centerCrop"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/c_A78156"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/iv_avatar_three"
                    android:layout_marginTop="-20dp"
                    android:background="@mipmap/icon_number_three"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/iv_avatar_three"
                    android:layout_marginBottom="-10dp"
                    android:background="@mipmap/img_number_three"/>


                <TextView
                    android:id="@+id/tv_name_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_avatar_three"
                    android:layout_marginTop="8dp"
                    android:textSize="12dp"
                    android:textColor="@color/c_87390E"/>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_name_three"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_popular_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="壕气"
                        android:textSize="10dp"
                        android:textColor="@color/c_87390E"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_state_three"
                    android:layout_width="61dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ll_three"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/selector_headline_user_follow"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>