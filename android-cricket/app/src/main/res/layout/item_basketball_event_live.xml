<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_part"
            android:layout_width="60dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/c_87390E"
            app:stv_solid="@color/c_FFDFAB"
            app:stv_corner="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_part"
            app:layout_constraintBottom_toBottomOf="@id/tv_part"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:background="@mipmap/icon_arrow_down"
            android:backgroundTint="@color/c_999999"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="1dp"
        android:background="@color/line_color"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>