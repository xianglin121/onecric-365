        android:layout_marginLeft="12dp">
        <ImageView
            android:id="@+id/iv_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_league_label"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
