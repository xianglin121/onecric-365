            android:textColor="@color/white" />
    </FrameLayout>-->
    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_league_label"
            android:lines="1"
            android:maxEms="8"
            android:ellipsize="end" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fl_title"
        app:layout_constraintBottom_toBottomOf="@id/fl_title"
        app:layout_constraintLeft_toRightOf="@id/fl_title"
        android:layout_marginLeft="6dp"
        android:text="15:00"
        android:textSize="12dp"
        android:textColor="@color/c_999999"/>

    <TextView
        android:id="@+id/tv_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fl_title"
        app:layout_constraintBottom_toBottomOf="@id/fl_title"
        app:layout_constraintLeft_toRightOf="@id/tv_time"
        android:layout_marginLeft="58dp"
        android:text="第一节 00:16"
        android:textSize="12dp"
        android:textColor="@color/c_999999"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/fl_title"
        android:layout_marginTop="10dp"
        android:background="@color/line_color"/>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/selector_match_collect"/>

    <TextView
        android:id="@+id/tv_team_name_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/iv_collect"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:textColor="@color/c_333333"
        android:maxWidth="100dp"
        android:lines="1"/>

    <TextView
        android:id="@+id/tv_team_name_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_team_name_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_team_name_one"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14dp"
        android:textColor="@color/c_333333"
        android:maxWidth="100dp"
        android:lines="1"/>

    <View
        android:id="@+id/vertical_line_one"
        android:layout_width="1dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/iv_collect"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="120dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_team_name_one"
        app:layout_constraintBottom_toBottomOf="@id/tv_team_name_one"
        app:layout_constraintLeft_toRightOf="@id/vertical_line_one"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_home_round_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_home_round_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_home_round_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_home_round_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_home_round_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textSize="12dp"
            android:textColor="@color/c_87390E"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_team_name_two"
        app:layout_constraintBottom_toBottomOf="@id/tv_team_name_two"
        app:layout_constraintLeft_toRightOf="@id/vertical_line_one"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_away_round_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_away_round_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_away_round_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_away_round_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/c_999999"/>

        <TextView
            android:id="@+id/tv_away_round_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textSize="12dp"
            android:textColor="@color/c_87390E"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_collect"
        app:layout_constraintBottom_toBottomOf="@id/iv_collect"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_match_live"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_anchor"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="@id/iv_collect"
        app:layout_constraintBottom_toBottomOf="@id/iv_collect"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:src="@mipmap/bg_avatar_default"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>