<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view_circle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_eeeeee_circle"/>

    <ImageView
        android:id="@+id/iv_label"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/view_circle"
        app:layout_constraintBottom_toBottomOf="@id/view_circle"
        app:layout_constraintLeft_toLeftOf="@id/view_circle"
        app:layout_constraintRight_toRightOf="@id/view_circle"/>

    <View
        android:id="@+id/dash_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_dash_line_vertical"
        android:layerType="software"/>

    <TextView
        android:id="@+id/tv_home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_circle"
        app:layout_constraintBottom_toBottomOf="@id/view_circle"
        app:layout_constraintRight_toLeftOf="@id/view_circle"
        android:layout_marginRight="8dp"
        android:text="0'"
        android:textSize="12dp"
        android:textColor="@color/c_333333"/>

    <TextView
        android:id="@+id/tv_home_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view_circle"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="11dp"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:maxWidth="110dp"
        android:background="@mipmap/bg_match_dialog_left"/>

    <TextView
        android:id="@+id/tv_away_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_circle"
        app:layout_constraintBottom_toBottomOf="@id/view_circle"
        app:layout_constraintLeft_toRightOf="@id/view_circle"
        android:layout_marginLeft="8dp"
        android:text="0'"
        android:textSize="12dp"
        android:textColor="@color/c_333333"/>

    <TextView
        android:id="@+id/tv_away_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view_circle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="11dp"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:maxWidth="110dp"
        android:background="@mipmap/bg_match_dialog_right"/>

</androidx.constraintlayout.widget.ConstraintLayout>