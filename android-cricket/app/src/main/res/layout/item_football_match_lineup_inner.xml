<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="6"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:background="@mipmap/img_red_ream_uniform"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_number"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:lines="1"
        android:maxEms="6"
        android:ellipsize="end"/>

    <LinearLayout
        android:id="@+id/ll_home_yc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_number"
        android:layout_toLeftOf="@id/tv_number"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_yc"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@mipmap/icon_yellow_card_2"/>

        <TextView
            android:id="@+id/tv_home_yc_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_home_rc"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignTop="@id/tv_number"
        android:layout_toLeftOf="@id/ll_home_yc"
        android:background="@mipmap/icon_red_card_2"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/tv_number"
        android:layout_toRightOf="@id/tv_number"
        android:background="@mipmap/icon_football_lineup_arrow_down"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_number"
        android:layout_toRightOf="@id/iv_state"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_goal"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@id/tv_number"
        android:layout_toRightOf="@id/tv_number"
        android:background="@mipmap/icon_goal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_home_goal_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_number"
        android:layout_toRightOf="@id/iv_goal"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_home_own_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_number"
        android:layout_toLeftOf="@id/tv_number"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_own_goal"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@mipmap/icon_own_goals"/>

        <TextView
            android:id="@+id/tv_home_own_goal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>