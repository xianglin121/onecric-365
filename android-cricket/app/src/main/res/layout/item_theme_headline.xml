<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_cover"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        android:lines="2"
        android:maxEms="40"
        android:ellipsize="end"
        android:fontFamily="@font/noto_sans_display_semibold"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_cover"
        android:layout_width="121dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        android:src="@mipmap/img_updates_default"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"/>

    <ImageView
        android:id="@+id/iv_hot"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/icon_comment_hot"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="16dp"
        android:paddingRight="12dp"
        android:text="@string/theme_headline_top"
        android:textSize="12dp"
        android:textColor="@color/c_CC374A"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_top"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="16dp"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/comment"
        android:textSize="12dp"
        android:textColor="@color/c_999999"
        android:drawableLeft="@mipmap/icon_comment"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_comment"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="16dp"
        android:textSize="12dp"
        android:textColor="@color/c_999999"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>