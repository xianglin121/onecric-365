<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_theme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iv_theme"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_theme_tab"/>

            <TextView
                android:id="@+id/tv_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab_theme"
                android:textColor="@color/c_959DB0"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_match"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iv_match"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_match_tab"/>

            <TextView
                android:id="@+id/tv_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab_match"
                android:textColor="@color/c_959DB0"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_live_tab"/>

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab_live"
                android:textColor="@color/c_DC3C23"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_video_tab"/>

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab_video"
                android:textColor="@color/c_959DB0"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>